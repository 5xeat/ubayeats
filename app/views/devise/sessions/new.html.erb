<div class="container">
  <h1>歡迎 <i class="fas fa-motorcycle"></i> 回來</h1>
  
  <!-- <div class="img">
    <%= image_tag "logo-dark.png" %>
  </div> -->
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-item">
      <%= f.label :帳號 %><br />
      <%= f.email_field :email, placeholder: '電子郵件地址', autofocus: true, autocomplete: "email" %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
    </div>
  
    <div class="form-item">
      <%= f.label :密碼 %><br />
      <%= f.password_field :password, placeholder: '6-12位英文數字' , autocomplete: "current-password" %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, '記住我'%>
      </div>
    <% end %>
  
    <div class="flex">
      <%= f.submit "登入", class: 'btn btn-primary btn-submit' %>
    </div>
  
    <div class="flex">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-google' do %>
            <span>使用Google帳號登入</span>
          <% end %>
          <br />
        <% end %>
      <% end %>
    </div>
  <% end %>
  
  <div class="sign-up">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      還沒用過嗎?<%= link_to "建立帳戶", new_registration_path(resource_name) %><br />
    <% end %>
    
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "忘記密碼", new_password_path(resource_name) %><br />
    <% end %>
  </div>
</div>
