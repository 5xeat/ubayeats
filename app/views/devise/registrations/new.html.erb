<div class="container">
  <h2>註冊成為新會員 <i class="fas fa-motorcycle"></i></h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="form-item">
      <%= f.label :email, "電子信箱" %><br />
      <%= f.email_field :email, placeholder: 'xxxxx@example.com', autofocus: true, autocomplete: "email" %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
      <i class="fas fa-check-circle"></i>
    </div>
  
    <div class="form-item">
      <%= f.label :password, "密碼" %>
      <%= f.password_field :password,
          placeholder: "請輸入至少6個英數字元", 
          autocomplete: "new-password" %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
      <i class="fas fa-check-circle"></i>
    </div>
  
    <div class="form-item">
      <%= f.label :password_confirmation, "密碼確認" %><br />
      <%= f.password_field :password_confirmation,
          placeholder: "請再次輸入密碼", 
          autocomplete: "new-password" %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
      <i class="fas fa-check-circle"></i>    
    </div>
  
    <div class="form-item">
      <%= f.label :name, "暱稱" %><br />
      <%= f.text_field :name, placeholder: "請輸入使用者暱稱", autocomplete: "name" %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
      <i class="fas fa-check-circle"></i>
    </div>
  
    <div class="actions">
      <%= f.submit "註冊", class:"btn btn-primary btn-submit"  %>
    </div>
  
    <div class="flex">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-google' do %>
            <span>使用Google帳號登入</span>
          <% end %>
          <br />
        <% end %>
      <% end %>
    </div>
  
  <% end %>
  
  <%- if controller_name != 'sessions' %>
    已經有帳號？ <%= link_to "登入", new_session_path(resource_name) %><br />
  <% end %>
</div>
