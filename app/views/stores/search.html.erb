<div class="container">
  <p class="text-xl">『<%= @keyword %>』搜尋結果：</p>
  
  <div class="store-card-list">
    <% @stores.each do |store| %>
      <div class="card">
        <div class="heart">
          <i class="far fa-heart"></i>
        </div>
        <div class="image">
          <img src=<%= store.store_id_list %> alt=""/>
        </div>
        <div class="text">
          <p class="title"><%= store.store_name %></p>
          <p class="description"><%= store.store_type %></p>
          <div class="star">
            <i class="fas fa-star"></i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>