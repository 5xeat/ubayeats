<script
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8-ftXcq0f3Oc9CJB0TNnPly3gPcFU66Y&v=3&callback=initMap&libraries=&v=weekly"
defer
></script>

<div class="container">
  <% if @store_profile.errors.any? %>
  <ul>
    <% @store_profile.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <h1>註冊合作店家</h1>
  <p>成為我們的合作夥伴 分享美食，提高收入</p>  
  <%= form_for(@store_profile, url:stores_path, method:'post') do |form| %>
  
    <div class="form-item-upload">
      <%= form.label :store_certificate, '營業登記證' %>
      <%= form.file_field :store_certificate %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
    </div>
  
    <div class="form-item-upload">
      <%= form.label :store_photo, '餐點照片' %>
      <%= form.file_field :store_photo %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
    </div>
  
    <div class="form-item">
      <%= form.label :store_name, '店家名稱' %>
      <%= form.text_field :store_name %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
    </div>
  
  
    <div class="form-item">
      <%= form.label :store_type, '店家種類' %>
      <%= form.select(:store_type, options_for_select([["日式", "日式"], ["韓式", "韓式"], ["飲料", "飲料"], ["甜點", "甜點"], ["蔬食", "蔬食"], ["速食", "速食"]])) %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
    </div>
  
    <div class="form-item">
      <%= form.label :store_address, '店家地址' %>
      <%= form.text_field :store_address %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
    </div>
    
    <div class="form-item">
      <%= form.label :store_phone, '店家電話' %>
      <%= form.text_field :store_phone %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
    </div>

    <div class="form-item">
      <%= form.label :account, '帳戶' %>
      <%= form.text_field :account %>
      <div class="error-message"></div>
      <i class="fas fa-exclamation-circle"></i>
    </div>

    <div style="background:#f50;height:30px;width:100%">
      <%= form.hidden_field :latitude, value: '', id: 'latitude' %>
      <%= form.hidden_field :longitude, value: '', id: 'longitude' %>
    </div>
    
    <div class="actions">
      <%= form.submit '註冊', class:"btn btn-primary btn-submit", disabled: false %>
    </div>

  
  
  <% end %>
</div>
