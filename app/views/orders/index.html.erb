<div class="container">
  <h1>我的訂單(消費者視角)</h1>
  <div class="order-lists">
    <table>
      <thead>
        <tr>
          <th>訂單日期</th>
          <th>訂單明細</th>
          <th class="hidden md:inline-block">金額</th>
          <th>訂單狀態</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td>
                <%= StoreProfile.find(order.store_profile_id).store_name %>
                <% order.order_items.each do |item| %>
                  <div>
                  <span class="num"><%= item.quantity %></span>
                  <%= Product.find(item.product_id).name %>
                  </div>
                <% end %>
              </td>
              <td class="hidden md:inline-block">
                <%= order.total_price %>元                
              </td>
              <td>
                <%= link_to((order), class: "btn") do %>
                  <%= t("order_status.#{order.state}") %>
                <% end %>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>