<!DOCTYPE html>
<html>
  <head>
    <style>
      #map {
        height: calc(100vh - 70px);
        width: 100%;
      }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <script>
      let map, marker, lat, lng;
      function initMap() {
        const icon = {
          url: 'https://i.imgur.com/YmjSZCB.png',
          scaledSize: new google.maps.Size(80, 80),
          origin: new google.maps.Point(0,0),
          anchor: new google.maps.Point(0, 0)
        };

        navigator.geolocation.watchPosition((position) => {
          console.log(position.coords);
          lat = position.coords.latitude;
          lng = position.coords.longitude;
          // 初始化地圖
          map = new google.maps.Map(document.getElementById('map'), {
              zoom: 18,
              center: { lat: lat, lng: lng },
              mapId: 'c57b36ae7dbc5a40'
          });
          marker = new google.maps.Marker({
              position: { lat: lat, lng: lng },
              map: map,
              animation: google.maps.Animation.BOUNCE,
              icon: icon
          });
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBL-80hWXX74wWTTTjPIc3uNz_uUH5Wd-w&map_ids=c57b36ae7dbc5a40&callback=initMap&libraries=&v=beta"
    async defer>
    </script>
  </body>
</html>
