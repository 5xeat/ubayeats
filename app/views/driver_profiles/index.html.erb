<div class="map-container">  
  <div class="map">
    <div id="map"></div>
  </div>
  <div class="info">
    <div class="status">
      <p>
        <%= @driver_profile.online ? "等待新訂單..." : "未上線"%>
      </p>
      <a href="#" class="btn online-btn">
        <%= @driver_profile.online ? "下線" : "上線"%>
      </a>
    </div>
    <% if @driver_profile.online && @new_order %>
      <div class="order">
        <div class="distance-matrix">
          <p></p>
        </div>
        <div class="title">
          <p class="store-name">
            <%= @store.store_name %>
          </p>
          <div class="store-phone">
            <a href="tel:+886<%= @store.store_phone %>">
              <i class="fas fa-phone-alt"></i>
            </a>
          </div>
        </div>
        <p class="order-number"><%= @new_order.num %></p>
        <p class="store-address">詳細地址：<%= @store.store_address %></p>
        <p class="orderer">訂單人姓名：<%= @orderer.name %></p>
        <p class="order-address">訂單地址：<%= @new_order.address %></p>
        <div class="btn-list">
          <div class="take-order-btn btn">接單</div>
        </div>
      </div>
    <% end %>
  </div>
</div>