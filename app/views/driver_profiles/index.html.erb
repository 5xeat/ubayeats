<%= javascript_include_tag "//maps.googleapis.com/maps/api/js?key=#{ENV['google_api_key']}&map_ids=c57b36ae7dbc5a40&callback=initMap&libraries=places&v=beta", async: true, defer: true %>

<div class="map-container">
  <div class="destination hidden">
    <input
      id="destination-input"
      class="controls"
      type="text"
      placeholder="輸入店家..."
    />
    <button class="btn calc-btn">計算</button>
  </div>
  
  <div class="map">
    <div id="map"></div>
  </div>
  <div class="info">
    <div class="status">
      <p>未上線</p>
      <a href="#" class="btn online-btn">上線</a>
    </div>
    <div class="order">
      <div class="text">
        <p class="distance"></p>
        <p class="time"></p>
      </div>
      <div class="btn-list"></div>
    </div>
  </div>
</div>