<div class="flex  justify-center w-screen h-screen text-black bg-gray-100">
<div class="text-center text-gray-500">
<i class="fas fa-shopping-bag text-4xl my-7 ">新增產品</i>

<%= form_for(@product) do |form| %>
	<!-- Component Start -->
	<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
		<div class="w-80 bg-white shadow-2xl p-6 rounded-2xl">
			<div class="flex items-center">
				<span class="flex items-center justify-center w-6 h-6 rounded-full bg-pink-100 " >
					<svg class="w-4 h-4 stroke-current text-pink-600"  xmlns="far fa-smile"
           fill="none" viewBox="0 0 24 24" stroke="currentColor" >		
					</svg>
				</span>
				<span class="ml-2 text-2xl font-medium text-gray-500"></i>產品名稱</span>
			</div>
			<span class="block text-lg font-semibold mt-4 flex-wrap border-2 border-gray-300"> <%= form.text_field :name %></span>
			<div class="flex text-xs mt-3 font-medium">		
			</div>
		</div>
		<div class="w-80 bg-white shadow-2xl p-6 rounded-2xl">
			<div class="flex items-center">
				<span class="flex items-center justify-center w-6 h-6 rounded-full bg-red-100">
					<svg class="w-4 h-4 stroke-current text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round"  />
					</svg>
				</span>
				<span class="ml-2 text-2xl font-medium text-gray-500"></i>產品價格</span>
			</div>
			<span class="block text-lg font-semibold mt-4 border-2 border-gray-300"><%= form.text_field :price %></span>
		</div>

		<div class="w-80 bg-white shadow-2xl p-6 rounded-2xl">
			<div class="flex items-center">
				<span class="flex items-center justify-center w-6 h-6 rounded-full bg-blue-100">
					<svg class="w-4 h-4 stroke-current text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round"  />
					</svg>
				</span>
				<span class="ml-2 text-2xl font-medium text-gray-500"></i>產品描述</span>
			</div>
			<span class="block text-lg font-semibold mt-4 border-2 border-gray-300"><%= form.text_field :description %></span>
			<div class="flex text-xs mt-3 font-medium">
			</div>
		</div>
    <div class="flex justify-center ">
      <div class="self-center flex-1 text-center ">
        <button  class="btn"><%= form.submit "" %>新增產品</button>
      </div> 
  	</div>
 
  </div>
</div>
<% end %>





