<div class="bg-yellow-50">
  <div><img src=<%= @store_profile.store_photo %> alt="店家照片"/></div>
   <div class="flex justify-between border-b pb-8">
     <h1 class="font-semibold text-2xl"><%= @store_profile.store_name %></h1>
     <h2 class="font-semibold text-2xl"><%= @store_profile.store_type %></h2>
     <h2 class="font-semibold text-2xl"><%= @store_profile.store_address %></h2>
   </div>
  <div class="flex mt-10 mb-5 ">
    <h3 class="font-semibold text-gray-600 text-xl uppercase w-2/5 ">商品</h3>
    <%# <h3 class="font-semibold text-center text-gray-600 text-lg uppercase w-1/5 text-center">數量</h3> %>
    <h3 class="font-semibold text-center text-gray-600 text-xl uppercase w-1/5 text-center">價錢</h3> 
