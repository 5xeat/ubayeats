          <div class="flex w-2/5"> 
          <!-- product -->  
            <div class="flex flex-col justify-between ml-4 flex-grow">
              <span class="font-bold text-lg "><%= product.name %></span>      
            </div>
          </div>
         
          <span class="text-center w-1/5 font-semibold text-lg"><%= product.price %></span>
          <span class="text-center w-1/5 font-semibold text-lg"><%= product.description %></span>
        </div>  
        <button class="cartItemCount"> 
         <div  data-controller="pricing" 
        data-action='click->pricing#addToCart' data-pricing-id=<%= product.id %>>
        加到購物車<i class="fas fa-cart-plus"></i>
        </button>
    <% end %>  
